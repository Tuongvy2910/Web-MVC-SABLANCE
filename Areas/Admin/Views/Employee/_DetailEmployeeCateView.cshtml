@model List<SABLANCE.Models.Employee>
    @{ 
        var cate = ViewBag.CateEmployee as SABLANCE.Models.CategoriesEmployee;
    }

<div class="modal-body" id="EmployeeCateViewModalContent">
    <div class="col-lg-12" style="margin-bottom: 10px;">
        <div class="row">

            <div class="col-lg-4" style="align-self: end;">
                <div class="form-group">
                    <label>Mã chức vụ</label>
                    <input id="Code" disabled value="@cate.Code" name="Code" type="text" class="form-control" />
                </div>
            </div>
            <div class="col-lg-8">
                <div class="form-group">
                    <label>Tên chức vụ</label>
                    <input id="Name" name="Name" value="@cate.Name" type="text" disabled class="form-control" placeholder="Nhập tên chức vụ nhân viên" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12" style="border-top: 0.2px solid #000; border-bottom: none !important;">
        <div class="row" id="showcus" style="margin-top: 10px;">
            <h3>DANH SÁCH NHÂN VIÊN</h3>
            <table id="employee-table" class=" col-lg-12 table table-bordered table-responsives table-striped">
                <thead>
                    <tr>

                        <th>ID </th>
                        <th>Họ</th>
                        <th>Tên</th>
                        <th>Ngày sinh</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody id="cusMem">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td id="cusID">@item.ID</td>
                            <td id="cusLastName">@item.LastName</td>
                            <td id="cusFirstName">@item.FirstName</td>
                            <td id="cusDateOfBirth">
                                @if (item.DateOfBirth.HasValue)
                                {
                                    @item.DateOfBirth.Value.ToString("dd/MM/yyyy")
                                }
                                else
                                {
                                    <a>N/A</a>
                                }
                            </td>
                            <td id="cusPhone">@item.Phone</td>
                            <td id="cusEmail">@item.Email</td>
                        </tr>
                    }

                </tbody>

            </table>

        </div>
    </div>
</div>

