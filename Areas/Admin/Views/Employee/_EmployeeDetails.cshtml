@model SABLANCE.Models.Employee
@{
    var data = ViewBag.Employee as SABLANCE.Models.Employee;
}
<link href="~/Content/employee.css" rel="stylesheet" />


<div class="modal-body" id="employeeDetailContent">
    <div class="col-lg-12" style="border-bottom:0.2px solid; margin-bottom: 10px;">
        <div class="row">

            <div class="col-lg-4 image-group" style="margin-bottom: 10px;">
                <div class="uploadpreview image-upload">
                    @if (!string.IsNullOrEmpty(data.Image))
                    {
                        <img src="~/Image/User/@data.Image" class="img-em" id="img-Employee" />
                    }
            else
            {
                <img src="~/Image/User/image-employee.jpg" class="img-em" id="img-Employee" />
            }
                </div>
            </div>

            <div class="col-lg-4" style="align-self: end;">
                <div class="form-group">
                    <label>Mã định danh</label>
                    <input id="Code" name="Code" value="@data.Code" type="text" class="form-control" readonly/>
                   
                </div>
            </div>
            <div class="col-lg-4" style="align-self: end;">
                <div class="form-group">
                    <label>CCCD/CMND</label>
                    @if (!string.IsNullOrEmpty(data.CCCD))
                    {
                        <input id="cccd" name="CCCD" type="text" value="@data.CCCD" class="form-control" readonly />
                    }
                    else
                    {
                        <input id="cccd" name="CCCD" type="text" value="CCCD/CMND trống" style="font-style:italic; font-size:11px; color: red;" class="form-control" readonly />
                    }
                    
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <label>Họ Nhân viên</label>
                    @if (!string.IsNullOrEmpty(data.LastName))
                    {
                        <input id="LastName" name="LastName" value="@data.LastName" type="text" class="form-control" readonly />
                    }
                    else
                    {
                        <input id="LastName" name="LastName" value="Họ nhân viên trống" type="text" style="font-style:italic; font-size:11px; color: red;" class="form-control" readonly />
                    }

                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label>Tên Nhân viên</label>
                    <input id="FirstName" name="FirstName" value="@data.FirstName" type="text" class="form-control" readonly />
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    <label>Giới tính</label>
                    <input id="gender" name="Gender" value="@data.Gender" type="text" class="form-control" readonly />
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <label>Ngày sinh</label>

                        <input id="DateOfBirth" name="DateOfBirth" value="@data.DateOfBirth.Value.ToString("dd/MM/yyyy")" type="text" class="form-control" readonly />

                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label>Số điện thoại</label>
                    <input id="Phone" name="Phone" type="text" value="@data.Phone" class="form-control" readonly />
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label>Email</label>
                    @if (!string.IsNullOrEmpty(data.Email))
                    {
                        <input id="Email" name="Email" value="@data.Email" size="30" type="text" class="form-control" readonly />
                    }
                    else
                    {
                        <input id="Email" name="Email" value="Email trống" type="text" style="font-style:italic; font-size:11px; color: red;" class="form-control" readonly />
                    }

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input id="Address" name="Address" type="text" value="@data.Address" class="form-control col-lg-11" style="float: none !important;" readonly />
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <label>Mã tài khoản</label>
                    <input id="accountId" name="AccountID" type="text" value="@data.AccountID" class="form-control" readonly />
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label>Tên tài khoản</label>
                    <input id="AccountType" name="AccountType" value="@data.Account.AccountType" type="text" class="form-control" readonly />

                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label>Vị trí làm việc: </label>
                    <input type="text" name="CateEmployee" value="@data.CategoriesEmployee.Name" id="CateEmployee" class="form-control" readonly />
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" style="float: right; " class="btn btn-primary">Chỉnh sửa</button>
        </div>
    </div>
</div>