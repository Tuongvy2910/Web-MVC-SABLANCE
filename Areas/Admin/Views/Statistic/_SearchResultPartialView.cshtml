@model List<SABLANCE.Areas.Admin.Models.Inventory>
<link href="~/Content/employee.css" rel="stylesheet" />

<div class="modal-body" id="employeeDetailContent">
    @if (Model.Count > 0)
    {
        <table class="table table-bordered table-responsives table-striped">
            <!-- Code để hiển thị thông tin sản phẩm trong bảng -->
            <thead>
                <tr style="text-align: center;">
                    <th>ID</th>
                    <th>Mã mặt hàng</th>
                    <th>Số lượng tồn kho</th>
                    <th>Số lượng sản phẩm đã bán</th>
                    <th>Số lượng sản phẩm xuất kho</th>
                    <th>Ngày nhập kho</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="text-align: center;">
                        <td>@item.ProductID</td>
                        <td>@item.ProductCode</td>
                        <td>@item.Quantity</td>
                        <td>@item.QuantityOrder</td>
                        <td>@item.QuantitySO</td>
                        <td>@item.PODate</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
            {
                <h4>Không tìm thấy sản phẩm trong kho</h4>
            }

</div>
