
@{
    ViewBag.Title = "Tra cứu bảo hành";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/policy.css" rel="stylesheet" />
<div class="container-detail mt-3">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="search-text">
                <div class="checkbill-content-center" id="loading-warranty" style="width: 150px; display: none">
                    <div class="checkbill-form-content">
                        <div class="loader"></div>
                    </div>
                </div>
            </div>
            <div style="text-align:center; width: 75%; margin: auto" id="WarrantySearch">
                <div class="checkbill-form-content">
                    <h1 style="padding:20px; font-size: 30px !important; font-weight: bold;" class="main-orange-color">TRA CỨU SẢN PHẨM BẢO HÀNH</h1>
                    <div class="phone-section">
                        <input class="checkbill-input mt-3" type="tel" id="valueInPutphone" data-type="0" placeholder="Vui lòng nhập số điện thoại kiểm tra">
                        <div class="text-error"></div>
                        <button class="checkbill-btn mt-5" id="btn-login"> TIẾP TỤC </button>
                    </div>
                    <div class="text-center otp-section">
                        <p class="h3">NHẬP MÃ XÁC NHẬN</p>
                        <div class="text-frmsms">Mã xác nhận sẽ được gửi đến sồ điện thoại <span class="txtloginphone"></span></div>
                        <div class="form-group digit-group" data-group-name="digits" data-autosubmit="false" autocomplete="off">
                            <input class="form-control input-style digit-sms" type="text" maxlength="1" id="digit-1" data-next="digit-2">
                            <input class="form-control input-style digit-sms" type="text" maxlength="1" id="digit-2" data-next="digit-3" data-previous="digit-1">
                            <input class="form-control input-style digit-sms" type="text" maxlength="1" id="digit-3" data-next="digit-4" data-previous="digit-2">
                            <input class="form-control input-style digit-sms" type="text" maxlength="1" id="digit-4" data-next="digit-5" data-previous="digit-3">
                            <input class="form-control input-style digit-sms" type="text" maxlength="1" id="digit-5" data-next="digit-6" data-previous="digit-4">
                            <input class="form-control input-style digit-sms" type="text" maxlength="1" id="digit-6" data-previous="digit-5">
                        </div>
                        <div class="text-erorr my-2"></div>
                        <button class="btn btn-next-step" id="btnVerifyOtpWarranty">BƯỚC TIẾP THEO</button>
                        <div class="mt-4">
                            <button class="backsms" disabled="disabled">Gửi lại mã</button>
                        </div>
                        <div class="text-frmsms">Vui lòng chờ  <span class="countdownlg">60</span> giây để thử lại</div>
                    </div>
                    <div class="mt-5">
                        <span style="color:#6c757d">Tổng đài hổ trợ bảo hành: </span><b>1800 6050</b>
                    </div>
                </div>
            </div>
            <div class="container" style="display:none" id="WarrantyDetail">
                <div class="mt-3"><span>BẢO HÀNH</span> &gt; <span>SẢN PHẨM CỦA BẠN</span></div>
                <hr>
                <div class="d-flex-margin5px">
                    <div class="d-flex-with85percent">
                        <div class="warranty-colunm">
                            <div class="bnt-sab-def">Mã phiếu</div>
                        </div>
                        <div class="warranty-colunm">
                            <div class="bnt-sab-def">Sản phẩm</div>
                        </div>
                        <div class="warranty-colunm">
                            <div class="bnt-sab-def">Tình trạng sản phẩm</div>
                        </div>
                        <div class="warranty-colunm">
                            <div class="bnt-sab-def">Trạng thái</div>
                        </div>
                    </div>
                    <div style="width:15%;">
                    </div>
                </div>
                <div id="warranty-detail">

                </div>
            </div>
        </div>
    </div>
</div>

